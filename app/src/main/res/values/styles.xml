<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:shadowColor">@color/colorTextShadow</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">10</item>
    </style>


    <style name="OtherWhiteText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:shadowColor">@color/colorTextShadow</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">10</item>
    </style>
    <style name="CurrentTemp" parent="OtherWhiteText">
        <item name="android:inputType">number</item>
        <item name="android:textSize">50sp</item>
    </style>
    <style name="NotCurrentTemp" parent="CurrentTemp">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="WeatherParamsText" parent="CurrentTemp">
        <item name="android:textSize">15sp</item>
    </style>
    <style name="DegSign" parent="OtherWhiteText">
        <item name="android:textSize">25sp</item>
        <item name="android:drawableStart">@drawable/deg_icon</item>
    </style>


    <style name="Background">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/day_back_gradient</item>
    </style>


</resources>
