<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:gravity="top">
        <shape>
            <gradient
                android:startColor="#E91E63"
                android:centerColor="#67CAFF"
                android:endColor="#80FF9800"
                android:centerY="0"
                android:gradientRadius="2000"
                android:type="radial">
            </gradient>
        </shape>
    </item>
    <item android:gravity="bottom">
        <shape>
            <gradient
                android:endColor="#80FF9800"
                android:centerColor="#9C27B0"
                android:startColor="#E91E63"
                android:centerY="1"
                android:gradientRadius="2000"
                android:type="radial">
            </gradient>
        </shape>
    </item>
</layer-list>
