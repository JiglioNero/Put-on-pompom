<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="weatherViewModel"
            type="jiglionero.android.app.putonpompom.model.WeatherViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/Background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.fragment.MainWeatherFragment">

        <TextView
            android:id="@+id/temp"
            style="@style/CurrentTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:onClick="@{(view) -> weatherViewModel.switchDegreesName}"
            android:text="@{String.valueOf((int)weatherViewModel.getFormatTemp(weatherViewModel.weatherResponseCurrent))}"
            app:autoSizeTextType="uniform"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/degree_sign"
            style="@style/DegSign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@{weatherViewModel.degreesNameUse.name}"
            android:onClick="@{(view) -> weatherViewModel.switchDegreesName}"
            app:layout_constraintBottom_toBottomOf="@+id/temp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/temp"
            app:layout_constraintTop_toTopOf="@+id/temp"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/humidity"
            style="@style/HumidityText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:text="@{String.valueOf(weatherViewModel.weatherResponseCurrent.relativeHumidity)}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/pressure"
            style="@style/PressureText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:text="@{String.valueOf(weatherViewModel.weatherResponseCurrent.pressure.metric.value)}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/humidity" />

        <TextView
            android:id="@+id/wind_speed"
            style="@style/WindText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:text="@{String.valueOf(weatherViewModel.weatherResponseCurrent.wind.speed.metric.value)}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pressure" />

        <TextView
            android:id="@+id/discribe"
            style="@style/WeatherParamsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@{weatherViewModel.weatherResponseCurrent.weatherText}"
            app:layout_constraintEnd_toEndOf="@+id/temp"
            app:layout_constraintStart_toStartOf="@+id/temp"
            app:layout_constraintTop_toBottomOf="@+id/temp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
